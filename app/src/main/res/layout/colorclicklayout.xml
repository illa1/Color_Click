<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="match_parent">
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt_main_title"
        android:textSize="28sp"
        android:textAlignment="center"
        />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="#CC0"
        />
    <ImageView
        android:id="@+id/imageView"
        android:src="@drawable/lets_go"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        />

    <Button
        android:id="@+id/button_fast_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_main_app_1"
        android:textSize="22sp"
        />
    <Button
        android:id="@+id/btn_tic_tac_toe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_tic_tac_toe"
        android:textSize="22sp"
        />


</LinearLayout>